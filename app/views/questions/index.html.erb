<p style="color: green"><%= notice %></p>

<div class="row align-items-center">
  <div class="col-sm-10">
    <h1 class="mb-5">Questions</h1>
  </div>
  <div class="col-sm-2 text-end">
    <%= link_to "New question", new_question_path, class: 'btn btn-success' %>
  </div>
</div>

<div id="questions">
  <ul class="list-group">
    <% @questions.each do |question| %>
      <li class="list-group-item">
        <div class="row">
        <div class="col-sm-10">
          <p class="lead">Question: <b><%= question.content %></b></p>
          <p class="lead">Answers:</p>
          <ol>
            <% question.answers.each do |answer| %>
              <li class="lead"><b><%= answer.decorate.with_personality_score %></b></li>
            <% end %>
          </ol>
        </div>
        <div class="col-sm-2">
          <%= link_to "Show this question", question, class: 'btn btn-primary w-100 mb-1' %>
          <%= link_to "Edit this question", edit_question_path(question), class: 'btn btn-warning mb-1 w-100' %>
          <%= button_to "Destroy this question", question, method: :delete, class: 'btn btn-danger w-100' %>
        </div>
      </div>
      </li>
    <% end %>
  </ul>
</div>

