<p style="color: green"><%= notice %></p>

<div class="row justify-content-between mb-2">
  <div class="col-4">
    <%= link_to "Back to questions", questions_path, class: 'btn btn-primary' %>
    <%= link_to "Edit this question", edit_question_path(@question), class: 'btn btn-warning' %>
  </div>
  <div class="col-4">
    <%= button_to "Destroy this question", @question, method: :delete, class: 'btn btn-danger float-end' %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <div class="py-3 text-center">
      <h5>Question</h5>
      <p class="fs-1"><%= @question.content %></p>
      <p class="mb-0">Answered 24 times</p>
      <p class="mb-0">The average answer is 64% extrovert</p>
    </div>
  </div>
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <% @question.answers.each_with_index do |answer, index| %>
        <li class="list-group-item py-3 text-center">
          <h5>Answer <%= index + 1 %></h5>
          <p class="lead"><%= answer.decorate.with_personality_score %></p>
          <p class="mb-0">Selected 10 times (15%)</p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
